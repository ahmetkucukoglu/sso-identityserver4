@model SSO.Application.Role.Commands.CreateRole.CreateRoleCommand

<div class="row justify-content-md-center">
    <div class="col-sm-6">
        <h1>Create</h1>
    </div>
</div>

<div class="row justify-content-md-center">
    <div class="col-sm-6">
        @await Html.PartialAsync("_ValidationSummary")
    </div>
</div>

<div class="row justify-content-md-center">

    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading">
            </div>
            <div class="panel-body">

                <form asp-route="Create" method="post">
                    <fieldset>
                        <div class="form-group">
                            <label asp-for="Name" class="font-weight-bold"></label>
                            <input class="form-control" placeholder="Name" asp-for="Name" autofocus>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-primary">Create</button>
                        </div>
                    </fieldset>
                </form>

                <a asp-area="" asp-controller="Role" asp-action="Index">Back to list</a>
            </div>
        </div>
    </div>
</div>